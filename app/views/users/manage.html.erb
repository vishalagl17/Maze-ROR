<div class="navbarTopMazeProject">
  <div class="mazeImgNavbar">
    <%= image_tag "mazeimage.png" %>
  </div>
  <div class="mazeTextNavbar">
    <h1>Maze</h1>
  </div>
  <h1 class="manageUserManagement">User Management</h1>
</div>

<div class="sidebar">
  <a><%=image_tag("feedImage2.png", style: "margin-right:22px")%><%= link_to "Feed", root_path(@post) , class: "manageFeedButtonMazeSideNavbarShowPage" %> </a>

  <div class="managemazeProjectLeftSidebarprofilelogoutImageConatiner">
    <a> <%=image_tag("profileImage.png", style: "margin-right:22px") %>  Profile</a>
    <a  class="feedImageButtonSideNavbar"><%=image_tag("manageUser.png", style: "margin-right:22px") %>Manage User</a>
    <a href="/reports", class="ReportsSideBar1"><%= image_tag("reportsimage.png", style: "margin-right:22px; background-color:grey") %>Reports</a>
    <a><%=image_tag("logoutImage.png", style: "margin-right:22px") %><%= link_to "Logout",destroy_user_session_path, data: { "turbo-method": :delete } , class: "logOutButtonMazeSideNavbar" %></a>
    <%#= button_to "Logout", destroy_user_session_path, method: :delete, form: {  data: { turbo: :false } } %>
  </div>

</div>

<div class="managemazeProjectRightSidebar">

  <div class="managemazeProjectRightSidebarTopNavbar">
    <%= image_tag("userImageEllipse1.png") %>
    <h2 style="margin-left: 80px; position: absolute;top: -14px">Vishal Agarwal</h2>
  </div>
</div>

<div class="manageSecondContainerMazeProject">
  <p class="manageListOfUsersText">List Of Users</p>
  <%= button_to 'create user',createuser_path, method: :get, class: "managecreateUserButton"%>

  <%@users.each do |user| %>
    <br>
    <div class="manageUsersActivateDeactivate">

      <%= image_tag("mazeimage.png") %>
      <div class="managegreenDotImage"><%=image_tag("greendot.png") %></div>

      <p class="manageUserName"><%= user.first_name %> <%= user.last_name %></p>

      <p class="manageUserNumber"><%= user.phone_number %>  </p>
      <p class="manageUserEmail">  <%= user.email %></p>

      <%#= user.access_locked? %>
      <%#= button_to 'ban' ,ban_user_path(user) , method: :patch  %>
      <%= button_to ban_status(user), ban_user_path(user), method: :patch, class: "manageUsersActivateDeactivateButton" %>

    </div>
<br>
  <% end %>

</div>

